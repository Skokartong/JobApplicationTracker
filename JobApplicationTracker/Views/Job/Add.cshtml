@using Microsoft.AspNetCore.Mvc.Rendering
@model JobApplicationTracker.Models.JobApplication

<div class="container mt-5 shadow p-4 rounded-lg" style="background: linear-gradient(180deg, #faf9f8 0%, #e0e7ed 100%);">
    <h1>New Application</h1>

    <form asp-action="Add" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="JobCategory">Category</label>
            @Html.DropDownListFor(model => model.JobCategory,
                        (List<SelectListItem>)ViewBag.CategoryList,
                        "Choose category",
                        new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label asp-for="Status">Status</label>
            @Html.DropDownListFor(model => model.Status,
                        (List<SelectListItem>)ViewBag.StatusList,
                        "Choose status",
                        new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label asp-for="Type">Employment Type</label>
            @Html.DropDownListFor(model => model.Type,
                        (List<SelectListItem>)ViewBag.TypeList,
                        "Choose type",
                        new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label asp-for="Level">Level</label>
            @Html.DropDownListFor(model => model.Level,
                        (List<SelectListItem>)ViewBag.LevelList,
                        "Choose level",
                        new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label asp-for="Company">Company</label>
            <input asp-for="Company" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="City">City</label>
            <input asp-for="City" class="form-control" />
        </div>

        <button type="submit" class="btn-custom mt-3">Add job</button>
        <a asp-action="Dashboard" class="btn-custom mt-3">Go back</a>
    </form>
</div>