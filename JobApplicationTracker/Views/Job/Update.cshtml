@model JobApplicationTracker.Models.JobApplication

<div class="container mt-5 h-90">
    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="JobCategory">Category</label>
            @Html.DropDownListFor(model => model.JobCategory,
                (List<SelectListItem>)ViewBag.CategoryList,
                "Choose category",
                new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label asp-for="Status">Status</label>
            @Html.DropDownListFor(model => model.Status,
                (List<SelectListItem>)ViewBag.StatusList,
                "Choose status",
                new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label asp-for="Type">Employment Type</label>
            @Html.DropDownListFor(model => model.Type,
                (List<SelectListItem>)ViewBag.TypeList,
                "Choose type",
                new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label asp-for="Level">Level</label>
            @Html.DropDownListFor(model => model.Level,
                (List<SelectListItem>)ViewBag.LevelList,
                "Choose level",
                new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label asp-for="Company">Company</label>
            <input asp-for="Company" class="form-control" />
        </div>

        <button type="submit" class="btn-custom mt-3 rounded-pill">Update</button>
        <a asp-action="Dashboard" class="btn-custom mt-3 rounded-pill">Go back</a>
    </form>
</div>
